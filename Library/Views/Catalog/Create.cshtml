<main>
    <h1 class="text-black-50 text-center">Create Asset</h1>
    <hr class="bg-secondary w-50" style="height: 2px" />
    <form asp-controller="Catalog" asp-action="Create" class="w-50 mx-auto" method="POST">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" class="form-control" id="Title" name="Title" placeholder="Title..." />
        </div>
        <div class="form-group">
            <label for="url">url</label>
            <input type="text" class="form-control" id="url" name="url" placeholder="Image Url..." />
        </div>
        <div class="form-group">
            <label for="name">Author</label>
            <input type="text" class="form-control" id="Author" name="Author" placeholder="Author Or Director..." />
        </div>
        <hr class="bg-secondary" style="height: 2px" />
        <div class="d-flex justify-content-around mt-4">
            <button type="submit" class="btn bg-secondary text-white">Create</button>
            <a asp-controller="Catalog" asp-action="Index" class="btn bg-secondary text-white">Back To All</a>
        </div>
    </form>
</main>
